<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- 🖼 Left Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/article_image_view"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ImageCustomCorners"
            android:contentDescription="Featured Image" />

        <!-- 📰 Texts on Right -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end"
            android:textDirection="rtl">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="انتصار النادي الأهلي المصري على نظيره الهلال السوداني بهدف نظيف في إياب ربع نهائي دوري أبطال أفريقيا"
                android:textSize="15sp"
                android:textColor="#003756"
                android:textStyle="bold"
                android:maxLines="3"
                android:ellipsize="end"
                android:textAlignment="viewEnd"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/article_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قبل ساعتين"
                android:textSize="12sp"
                android:textColor="#003756"
                android:layout_marginTop="6dp"
                android:textAlignment="viewEnd"
                android:textDirection="rtl" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>