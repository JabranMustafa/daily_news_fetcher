<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Fragments.ProfileFragment">

    <!-- Search Box -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint"
        android:drawableEnd="@drawable/ic_search"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/rounded_search_bg"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logoImage"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />


    <!-- Logo and Chat Icon -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login_app_icon"
        app:layout_constraintTop_toTopOf="@id/searchEditText"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Header Title "\u062a\u0633\u062c\u064a\u0644" -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u062a\u0633\u062c\u064a\u0644"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/searchEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Arrow -->
    <ImageView
        android:id="@+id/arrowIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        app:layout_constraintTop_toTopOf="@id/headerTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Social Buttons -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_google"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="الاستمرار عبر جوجل"
        android:drawableEnd="@drawable/devicon_google"
        android:textColor="#04A6A9"
        android:background="@drawable/button_border"

        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/facebook_txt"
        android:drawableEnd="@drawable/logos_facebook"
        android:background="@drawable/button_border"
        android:textColor="#04A6A9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_google"
        app:layout_constraintStart_toStartOf="@id/btn_google"
        app:layout_constraintEnd_toEndOf="@id/btn_google" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_apple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/apple_icon"
        android:drawableEnd="@drawable/apple"
        android:background="@drawable/button_border"
        android:textColor="#04A6A9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_facebook"
        app:layout_constraintStart_toStartOf="@id/btn_google"
        app:layout_constraintEnd_toEndOf="@id/btn_google" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/email_txt"
        android:drawable="@drawable/ic_email"
        android:background="@drawable/button_border"
        android:textColor="#04A6A9"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_apple"
        app:layout_constraintStart_toStartOf="@id/btn_google"
        app:layout_constraintEnd_toEndOf="@id/btn_google" />

    <!-- Sign-in Option -->
    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="لديك بالفعل حساب؟  تسجبل دخول"
        android:textSize="14sp"
        android:textColor="@color/teal_700"
        app:layout_constraintTop_toBottomOf="@id/btn_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Warning Text -->
    <TextView
        android:id="@+id/tv_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الرجاء تسجيل الدخول او انشاء حساب للوصول الى هذه الميزة"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>