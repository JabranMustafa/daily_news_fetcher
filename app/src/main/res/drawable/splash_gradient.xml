<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: Navy to Teal -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#003756"
                android:endColor="#0C8B8C"
                android:useLevel="false" />
        </shape>
    </item>

    <!-- Center aqua-glow (radial simulation) -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="800"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#5504A6AA"
                android:endColor="#00000000"
                android:useLevel="false"/>
        </shape>
    </item>

    <!-- Top-right white glow -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="600"
                android:centerX="1"
                android:centerY="0"
                android:startColor="#88FFFFFF"
                android:endColor="#00FFFFFF"
                android:useLevel="false"/>
        </shape>
    </item>

</layer-list>
