<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Top-right white glow -->
    <item>
        <gradient
            android:type="radial"
            android:gradientRadius="800dp"
            android:centerX="1"
            android:centerY="0"
            android:startColor="#80FFFFFF"
            android:endColor="#00FFFFFF" />
    </item>

    <!-- Smooth background gradient -->
    <item>
        <gradient
            android:type="linear"
            android:angle="315"
            android:startColor="#0C8B8C"
            android:centerColor="#04A6AA"
            android:endColor="#003756" />
    </item>

</layer-list>